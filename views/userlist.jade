extends layout

block content
    h1= title 

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h3(class='lang', key='User Info', underline='true') User Info
            p
                strong(class='lang', key='Name') Name:
                |  <span id='userInfoName'></span>
                br
                strong(class='lang', key='Age') Age:
                |  <span id='userInfoAge'></span>
                br
                strong(class='lang', key='Gender') Gender:
                |  <span id='userInfoGender'></span>
                br
                strong(class='lang', key='Location') Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // USER LIST
        h2(class='lang', key='User List') User List
        #userList
            table
                thead
                    th(class='lang', key='Username') UserName
                    th(class='lang', key='Email') Email
                    th(class='lang', key='Delete') Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2(class='lang', key='Add User') Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username', class='lang', key='Username')
                input#inputUserEmail(type='text', placeholder='Email', class='lang', key='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name', class='lang', key='Full Name')
                input#inputUserAge(type='text', placeholder='Age', class='lang', key='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location', class='lang', key='Location')
                input#inputUserGender(type='text', placeholder='Gender', class='lang', key='Gender')
                br
                button#btnAddUser(class='btn btn-primary lang', key='Add User') Add User
        // /ADD USER

    // /WRAPPER

  
