doctype html
html
  head
    title= title
    link(link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block navbar
      nav.navbar.navbar-inverse
            .container-fluid
              .navbar-header
              ul.nav.navbar-nav
                li.active
                  a(href='/home', id='home') Home
                li
                if user
                  a(href='/userlist', id='user') User-list 
                li
                if !user 
                  a(href='/register', id='reg') Register
                li
                if !user
                  a(href='/login', id='log') Login
                li
                if user
                  a(href='/logout', id='out') Logout
              input(type='text', placeholder='Search', id='search')
      #container
       if success_msg
         each msg, i in success_msg
          .alert.alert-success #{success_msg}
       if error_msg
         each msg, i in error_msg
          .alert.alert-danger #{error_msg}
        if error
          each msg, i in error
           .alert.alert-danger #{error}
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(src='/javascripts/global.js')
  block content
