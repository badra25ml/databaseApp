extends layout

block content
  body
    h2 Login Page
    #container.col
      form(method='POST', action='/login', class='form-first')
        .imgcontainer
          img.avatar(src='./images/icon.png', alt='icon')
        .container
          label
            b Username
          input(type='text', class="form-control", placeholder='Enter Username', name='username', required='')
          label
            b Password
          input(type='password', class="form-control", placeholder='Enter Password', name='password', required='')
        .container(style='background-color:#f1f1f1')
          button.cancelbtn(type='button', class='btn btn-secondary') Cancel
          button(type='submit', class="btn btn-login") Login
          

       
   
  
