extends layout

block content
  body
    h2(class='lang', key='Login Page') Login Page
    #container.col
      form(method='POST', action='/login', class='form-first')
        .imgcontainer
          img.avatar(src='./images/icon.png', alt='icon')
        .container
          label(class='lang', key='Username')
            b Username
          input(type='text', class="form-control", placeholder='Enter Username', name='username', required='')
          label(class='lang', key='Password')
            b Password
          input(type='password', class="form-control", placeholder='Enter Password', name='password', required='', class='lang', key='Enter Password')
        .container(style='background-color:#f1f1f1')
          button.cancelbtn(type='button', class='btn btn-secondary', class='lang', key='Cancel') Cancel
          button(type='submit', class="btn btn-login", class='lang', key='Login') Login
          

       
   
  
